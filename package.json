{
  "name": "simpleswap-dapp",
  "version": "1.0.0",
  "description": "SimpleSwap DEX with React frontend and Hardhat testing",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "node": "hardhat node",
    "frontend:start": "cd frontend-app && npm start",
    "frontend:build": "cd frontend-app && npm run build",
    "frontend:test": "cd frontend-app && npm test",
    "install:all": "npm install && cd frontend-app && npm install"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@openzeppelin/contracts": "^5.0.1",
    "chai": "^4.3.10",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.15"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "defi",
    "dex",
    "react",
    "frontend"
  ],
  "author": "",
  "license": "MIT"
}
